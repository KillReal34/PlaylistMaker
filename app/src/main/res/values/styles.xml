<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLinearLayoutStyle" >
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="ActivityLinearLayoutStyle" >
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="ActivityFrameLayoutStyle" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="MainMessageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_interface_textSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_interface_textSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_iconPadding</item>
        <item name="iconSize">@dimen/main_iconSize</item>
        <item name="cornerRadius">@dimen/main_button_cornerRadius</item>
    </style>

    <style name="SettingsFrameLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_frame_height</item>
        <item name="android:layout_marginStart">@dimen/settings_frame_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/settings_frame_marginEnd</item>
    </style>

    <style name="SettingsMessageTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/settings_textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsImageStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settings_imageView_marginTop</item>
    </style>

    <style name="PanelHeaderButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconPadding">22dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="PanelHeaderTextStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_interface_textSize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ActivityLibraryTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchEditTextStyle" >
        <item name="android:hint">@string/search</item>
        <item name="android:maxLength">25</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>

    <style name="SearchImageViewStyle" >
        <item name="android:src">@drawable/clear_icon</item>
        <item name="android:visibility">gone</item>
        <item name="tint">@color/light_gray</item>
    </style>

    <style name="ActivityTrackRootLayoutStyle" >
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ActivityTrackTextViewTrackNameStyle" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActivityTrackTextViewNameGroupStyle" >
        <item name="android:textSize">@dimen/settings_groupName_or_trackTime_textSize</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="ActivityTrackTextViewTimeTrack" >
        <item name="android:textSize">@dimen/settings_groupName_or_trackTime_textSize</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="ActivityTrackImageViewStyle" >
        <item name="tint">@color/light_gray</item>
    </style>

    <style name="SearchActivityErrorTextStyles" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/searchActivity_error_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchActivityRefreshButtonStyles" >
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ActivitySearchTextHistoryTitleStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActivitySearchButtonClearHistoryStyle" >
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityAudioPlayerButtonBackStyle" >
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ActivityAudioPlayerTrackNameStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_interface_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font">@font/ys_display_regular</item>
    </style>

    <style name="ActivityAudioPlayerNameGroupStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:font">@font/ys_display_regular</item>
    </style>

    <style name="ActivityAudioPlayerButtonPlayStyle" >
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ActivityAudioPlayerPlayTimeStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font">@font/ys_display_regular</item>
    </style>

    <style name="ActivityAudioPlayerRightInfoTrackStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:font">@font/ys_display_regular</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>