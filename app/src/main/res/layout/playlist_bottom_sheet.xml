<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlistItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="8dp"
    android:gravity="center_vertical"
    android:layout_marginTop="24dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_playlist_cover_bs"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/no_load_image"
        tools:ignore="contentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tv_playlist_name_item_bs"
            style="@style/PlaylistNameBottomSheet"
            android:text="@string/playlist_name"/>

        <TextView
            android:id="@+id/tv_playlist_quantity_item_bs"
            style="@style/playlistQuantityBottomSheet"
            android:text="@string/quantity_tracks"
            />

    </LinearLayout>


</LinearLayout>