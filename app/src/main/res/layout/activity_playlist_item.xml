<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlistItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="4dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_playlist_cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/no_load_image_512x512" />

    <TextView
        android:id="@+id/tv_playlist_name_item"
        style="@style/ActivityPlaylistItemTextView"
        android:text="@string/name_new_playlist"/>

    <TextView
        android:id="@+id/tv_playlist_quantity_item"
        style="@style/ActivityPlaylistItemTextView"
        android:text="@string/quantity_tracks"
        />

</LinearLayout>