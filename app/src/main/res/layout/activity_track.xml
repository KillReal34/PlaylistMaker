<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_track_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" >

    <ImageView
        android:id="@+id/iv_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:src="@drawable/no_load_image" />

    <LinearLayout
        android:id="@+id/ll_root_linear_layout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="8dp"
        style="@style/ActivityTrackRootLayoutStyle">

        <TextView
            android:id="@+id/tv_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            tools:text="Track name"
            style="@style/ActivityTrackTextViewTrackNameStyle" />

        <LinearLayout
            android:id="@+id/ll_track_root_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ActivityTrackRootLayoutStyle" >

            <TextView
                android:id="@+id/tv_name_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="35"
                tools:text="Group"
                style="@style/ActivityTrackTextViewNameGroupStyle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point"
                style="@style/ActivityTrackImageViewStyle" />

            <TextView
                android:id="@+id/tv_left_time_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Time"
                style="@style/ActivityTrackTextViewTimeTrack" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingEnd="20dp"
        android:src="@drawable/user_agreement"
        style="@style/ActivityTrackImageViewStyle" />
</LinearLayout>